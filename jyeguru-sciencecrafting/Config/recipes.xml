<configs>

  <append xpath="/recipes">

    <!-- Beaker: Requires crucible -->
    <recipe name="toolBeaker" count="1" craft_time="120" material_based="true" craft_area="forge" craft_tool="toolForgeCrucible">
      <ingredient name="unit_glass" count="100" />
      <ingredient name="unit_lead" count="20" />
      <ingredient name="unit_clay" count="20" />
    </recipe>

    <!-- Acid: Slow, requires multiple ingredients -->
    <recipe name="resourceAcid" count="1" craft_time="300" craft_area="chemistryStation" tags="chemStationCrafting">
      <ingredient name="resourcePotassiumNitratePowder" count="50" />
      <ingredient name="resourceCoal" count="10" />
      <ingredient name="drinkJarRiverWater" count="1" />
      <ingredient name="resourceBone" count="5" />
    </recipe>

    <!-- Polymer: Farmable so not unbalanced, can be mined as oil shale via gas or oil -->
    <recipe name="resourceScrapPolymers" count="1" craft_area="chemistryStation" tags="chemStationCrafting">
      <ingredient name="ammoGasCan" count="50"/>
    </recipe>
    <recipe name="resourceScrapPolymers" count="5" craft_area="chemistryStation" tags="chemStationCrafting">
      <ingredient name="resourceOil" count="1"/>
    </recipe>

  </append>

</configs>
